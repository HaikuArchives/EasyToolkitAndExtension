+DEBUG_OPTIONS = -g -Wall
+OPTIMIZE = -O3
+
+MIN_ETKXX_VER = 0.3.2
+
+ifeq ($(OSTYPE),msys)
+PREFIX =
+else
+PREFIX = /usr/local
+endif
+
+DESTDIR = $(PREFIX)
+EXEC_SUFFIX =
+
+EXTRA_CFLAGS = -DUSE_ETKXX -DPREF_FOLDER=\"$(PREFIX)/etc/MuTerminal/\"
+EXTRA_LDFLAGS =
+
+ifeq ($(OSTYPE),msys)
+LIBICONV_CFLAGS = -I /MinGW/include
+LIBICONV_LIBS = -L /MinGW/lib -liconv
+EXEC_SUFFIX = .exe
+SETTINGS_SAMPLE = ../etc/sample.mp.msys
+else
+
+ifeq ($(findstring Linux,$(shell uname -a)),Linux)
+LIBICONV_CFLAGS =
+LIBICONV_LIBS =
+SETTINGS_SAMPLE = ../etc/sample.mp.linux
+else
+LIBICONV_CFLAGS =
+LIBICONV_LIBS = -liconv
+SETTINGS_SAMPLE = ../etc/sample.mp
+endif
+
+endif
+
+TARGET = MuTerminal
+
+OBJECTS = \
+	TermApp.o \
+	spawn.o \
+	MuTerminal.o \
+	TermWindow.o \
+	TermView.o \
+	TermBaseView.o \
+	TermIM.o \
+	CurPos.o \
+	VTPrsTbl.o \
+	VTKeyTbl.o \
+	TermBuffer.o \
